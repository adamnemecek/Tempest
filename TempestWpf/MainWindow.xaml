<Window x:Class="TempestWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Tempest" Height="720" Width="550">
    <DockPanel>
        <StackPanel DockPanel.Dock="Bottom">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Processor Status: "/>
                <TextBlock Name="processorStatus"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Math Box Status: "/>
                <TextBlock Name="mathBoxStatus"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Processor speed: "/>
                <TextBlock Name="processorSpeedText"/>
            </StackPanel>
        </StackPanel>
        <Canvas Name="canvas" Background="Black">
        </Canvas>
    </DockPanel>
</Window>
