<Window x:Class="TempestWpf.Debug6502Window"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:TempestWpf"
        Title="Debug6502Window" Height="300" Width="300">
    <DockPanel>
        <TextBox DockPanel.Dock="Top" Name="findString" HorizontalAlignment="Right" Width="100"/>
        <ListView Name="listView">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <local:DebugLineControl Item="{Binding}" BreakpointChanged="itemBreakpointChanged" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </DockPanel>
</Window>
